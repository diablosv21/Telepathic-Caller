<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	>
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
		<LinearLayout style="@style/AppHeader">
			<TextView
				android:text="@string/app_name"
				style="@style/HeaderText"
				/>
			<ImageView style="@style/HeaderDivider" />
			<ProgressBar
				android:id="@+id/prgLoading"
				android:indeterminate="true"
				android:padding="12dip"
				style="@style/HeaderButton"
				android:visibility="gone"
				/>
			<ImageButton
				android:id="@+id/btnRefresh"
				android:src="@drawable/refresh"
				style="@style/HeaderButton"
				/>
			<ImageView style="@style/HeaderDivider" />
			<ImageButton
				android:id="@+id/btnSettings"
				android:src="@drawable/settings"
				style="@style/HeaderButton"
				/>
		</LinearLayout>
		<ListView
			android:id="@+id/lstCalls"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:drawSelectorOnTop="false"
			android:background="#FFFFFF"
			android:visibility="gone"
			/>
		<LinearLayout
			android:id="@+id/pnlLoading"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:background="#FFFFFF"
			android:visibility="visible"
			android:gravity="center"
			>
			<TextView
				android:id="@+id/lblLoading"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				/>
		</LinearLayout>
		<TextView 
			style="@style/AppFooter"
			android:id="@+id/lblProfileSpacer"
			android:visibility="gone" />
	</LinearLayout>
	<SlidingDrawer 
		android:layout_width="fill_parent"
		android:layout_height="200dip"
		android:layout_alignParentBottom="true"
		android:id="@+id/sldProfile" 
		android:handle="@+id/btnSlideHandle" 
		android:content="@+id/pnlProfile" 
		android:visibility="gone"
		>
		<Button 
			android:id="@+id/btnSlideHandle"
			style="@style/AppFooter"
			/>
		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:id="@+id/pnlProfile" 
			android:orientation="horizontal" 
			android:background="#000000">
		    <ImageView
		    	android:id="@+id/imgProfile"
			    android:layout_width="100dip"
			    android:layout_height="wrap_content"
			    android:src="@drawable/profile_droid"
			    android:layout_gravity="top"
		    	/>
			<ScrollView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="#000000">
			    <TextView
			    	android:id="@+id/lblProfileDescription"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:textColor="#FFFFFF"
			    	android:textSize="18dip"
			    	android:padding="8dip" />
			</ScrollView>
		</LinearLayout>
	</SlidingDrawer>
</RelativeLayout>